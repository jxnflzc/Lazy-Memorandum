<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="per.jxnflzc.memorandumkotlin">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".MemorandumKotlinApplication"
        android:allowBackup="true"
        android:icon="@mipmap/icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.EditMemorandumActivity"
            android:theme="@style/AppThemeNoActionBar" />
        <activity
            android:name=".activity.menu.AboutActivity"
            android:label="@string/about"/>
        <activity
            android:name=".activity.menu.UpdateActivity"
            android:label="@string/update_log"
            android:theme="@style/Theme.AppCompat.Light.DialogWhenLarge" />
        <activity
            android:name=".activity.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>